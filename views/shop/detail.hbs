<section class="py-5">
    <div class="container">
        <div class="row gx-5">
            <aside class="col-lg-6">
                <div class="border rounded-4 mb-3 d-flex justify-content-center">
                    <img width="400" height="500" src="/images/{{product.image}}" />
                </div>

            </aside>
            <main class="col-lg-6">
                <div class="ps-lg-3">
                    <h4 class="title text-dark">
                        {{product.brand}} <br />
                        {{product.model}}
                    </h4>

                </div>

                <div class="mb-3">
                    <span class="h5">Price: ${{product.price}}</span>
                </div>
                <div class="row">

                    <dt class="col-3">Date</dt>
                    <dd class="col-9">{{dateFormat product.date "DD/MM/YYYY"}}</dd>


                    <dt class="col-3">Brand</dt>
                    <dd class="col-9">{{product.brand}}</dd>
                </div>

                <hr />

                <div class="row mb-4">
                    <!-- col.// -->
                    {{#if user}}
                    <form action="/shop/cart" method="post">
                        <input type="hidden" name="product_id" value="{{product._id}}">
                        <input type="hidden" name="price" value="{{product.price}}">
                        <div class="col-md-4 col-6 mb-3">
                            <label class="mb-2 d-block">Quantity</label>
                            <div class="input-group mb-3" style="width: 170px;">
                                <button class="btn btn-white border border-secondary px-3" type="button"
                                    id="button-minus" data-mdb-ripple-color="dark">
                                    <i class="fa-solid fa-minus"></i>
                                </button>
                                <input type="text" class="form-control text-center border border-secondary"
                                    name="quantity" placeholder="{{product.quantity}}" min="1"
                                    max="{{product.quantity}}" value="1" id="quantity-input" />
                                <button class="btn btn-white border border-secondary px-3" type="button"
                                    id="button-plus" data-mdb-ripple-color="dark">
                                    <i class="fa-solid fa-plus"></i>
                                </button>
                            </div>
                        </div>
                </div>
                <button type="submit" class="btn btn-primary shadow-0">
                    <i class="me-1 fa fa-shopping-basket"></i> Add to cart
                </button>
                </form>
                {{else}}
                <p>Please login to buy products</p>
                {{/if}}
        </div>
        </main>
    </div>
    </div>
</section>
